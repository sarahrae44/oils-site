<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <header>
      <h1><%=oil.name%></h1>
      <nav>
          <%# for bs... %>
        <table>
          <tr>
            <td>
              <button><a href="/">Home</a></button>
              <button><a href="/bodies">Body</a></button>
              <button><a href="/oils">Oils Index</a></button>
            </td>
          </tr>
        </table>
      </nav>
    </header>
    <main>
      <p><%=oil.desc%></p>

    </main>
    <footer>
      <section>
        <h2>Body System(s) associated with <%=oil.name%></h2>
        <table>
          <% for(let i = 0; i < oil.bodies.length; i++) { %>
          <tr>
          <td><a href="/bodies/<%=oil.bodies[i]._id%>"><img src="<%=oil.bodies[i].iconImg%>"></a></td>
          <td><a href="/bodies/<%=oil.bodies[i]._id%>"><%=oil.bodies[i].name%></a></td>
          <tr>
          <% } %>
        </table>
      </section>
      <a href="/oils/<%=oil.id%>/edit%>">Edit <%=oil.name%></a>
      <form action="/oils/<%=oil.id%>?_method=DELETE" method="POST">
        <input type="submit" value="Delete <%=oil.name%>"/>
      </form>

    </footer>
  </body>
</html>
